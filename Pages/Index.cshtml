@page
@model IndexModel
@using Microsoft.AspNetCore.Identity
@using GymTrackerProject.Data
@{

    ViewData["Title"] = "Главная";

}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <h1 class="display-3 fw-bold mb-4 text-white" style="line-height: 1.2; letter-spacing: -0.5px;">
                    Добро пожаловать в Gym Tracker
                </h1>
                <p class="lead mb-4 text-white" style="font-size: 1.3rem; line-height: 1.8; font-weight: 400;">
                    Управляйте тренировками, следите за прогрессом и достигайте результатов быстрее.
                </p>

                <div class="d-flex gap-3 flex-wrap">
                    @if (Model.IsSignedIn)
                    {
                       <a class="btn btn-yellow btn-lg px-4 fw-semibold" asp-page="/Workouts/WorkoutsList">Посмотреть тренировки</a>
                    }
                    else
                    {
                        <a class="btn btn-yellow btn-lg px-4 fw-semibold" asp-area="Identity" asp-page="/Account/Login">Войти</a>
                    }
                </div>
            </div>


            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <div class="hero-icon">
                    <svg width="300" height="300" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="100" cy="100" r="80" stroke="rgba(255, 193, 7, 0.3)" stroke-width="2" fill="rgba(255, 193, 7, 0.1)" />
                        <path d="M60 100 L85 125 L140 70" stroke="#FFC107" stroke-width="8" stroke-linecap="round" stroke-linejoin="round" />
                        <circle cx="100" cy="100" r="60" stroke="rgba(255, 193, 7, 0.5)" stroke-width="2" fill="none" />
                    </svg>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-4 text-white">Возможности Gym Tracker</h2>
        </div>


        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card h-100 p-4 border rounded-3 shadow-sm text-center">
                    <h4 class="fw-bold mb-3 text-white">Управление тренировками</h4>
                    <p class="text-light mb-3">Просматривайте список всех тренировок, структурируйте свои занятия и анализируйте нагрузку.</p>
                </div>
            </div>


            <div class="col-md-4">
                <div class="feature-card h-100 p-4 border rounded-3 shadow-sm text-center">
                    <h4 class="fw-bold mb-3 text-white">Прогресс со временем</h4>
                    <p class="text-light mb-3">Следите за изменением рабочих весов, количества повторений и динамикой прогресса.</p>
                </div>
            </div>


            <div class="col-md-4">
                <div class="feature-card h-100 p-4 border rounded-3 shadow-sm text-center">
                    <h4 class="fw-bold mb-3 text-white">Удобство и простота</h4>
                    <p class="text-light mb-3">Минималистичный интерфейс, простота и удобство предоставляемых функций.</p>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Stats Section -->
<section class="stats-section py-5 bg-dark">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4 mb-md-0">
                <h3 class="display-4 fw-bold text-yellow">100+</h3>
                <p class="text-light">Тренировок создано пользователями</p>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <h3 class="display-4 fw-bold text-yellow">5000+</h3>
                <p class="text-light">Записей прогресса</p>
            </div>
            <div class="col-md-4">
                <h3 class="display-4 fw-bold text-yellow">30+</h3>
                <p class="text-light">Упражнений в базе</p>
            </div>
        </div>
    </div>
</section>


<!-- CTA Section -->
@if(!Model.IsSignedIn)
{
    <section class="cta-section py-5">
        <div class="container text-center">
            <h2 class="display-5 fw-bold mb-4 text-white">Хотите сохранить свой прогресс?</h2>
            <p class="lead mb-4 text-white">Создайте аккаунт и ваши тренировки всегда будут под рукой.</p>
            <a class="btn btn-yellow btn-lg px-5 fw-semibold" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
            <a class="btn btn-outline-yellow btn-lg px-5 fw-semibold ms-3" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </div>
    </section>
}
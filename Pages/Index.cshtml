@page
@model IndexModel
@using Microsoft.AspNetCore.Identity
@using GymTrackerProject.Data
@{
    ViewData["Title"] = "Главная";
}

<!-- Hero Section -->
<!-- Hero Section -->
<section class="hero-section text-white py-4 py-md-5">
    <div class="container">
        <div class="row align-items-center">

            <!-- ✅ Иконка: на мобилке ПЕРВОЙ, на lg+ справа -->
            <div class="col-lg-6 text-center mt-0 mt-lg-0 order-1 order-lg-2">
                <div class="hero-icon">
                    <div class="mx-auto" style="max-width: 320px;">
                        <svg class="w-75 w-md-auto" viewBox="0 0 200 200" fill="none"
                             xmlns="http://www.w3.org/2000/svg"
                             style="max-width: 300px; height: auto;">
                            <circle cx="100" cy="100" r="80" stroke="rgba(255, 193, 7, 0.3)" stroke-width="2"
                                    fill="rgba(255, 193, 7, 0.1)" />
                            <path d="M60 100 L85 125 L140 70" stroke="#FFC107" stroke-width="8"
                                  stroke-linecap="round" stroke-linejoin="round" />
                            <circle cx="100" cy="100" r="60" stroke="rgba(255, 193, 7, 0.5)" stroke-width="2"
                                    fill="none" />
                        </svg>
                    </div>
                </div>
            </div>

            <!-- ✅ Контент: на мобилке ВТОРОЙ, на lg+ слева -->
            <div class="col-lg-6 hero-content text-center text-lg-start mt-4 mt-lg-0 order-2 order-lg-1">
                <h1 class="fw-bold mb-3 mb-md-4 text-white display-5 display-md-3"
                    style="line-height: 1.2; letter-spacing: -0.5px;">
                    Добро пожаловать в Gym Tracker
                </h1>

                <p class="text-white mb-4 fs-6 fs-md-5"
                   style="line-height: 1.8; font-weight: 400;">
                    Управляйте тренировками, следите за прогрессом и достигайте результатов быстрее.
                </p>

                <!-- ✅ Кнопка НЕ широкая: без w-100, по центру на мобилке -->
                <div class="d-flex justify-content-center justify-content-lg-start">
                    @if (Model.IsSignedIn)
                    {
                        <a class="btn btn-yellow btn-lg px-4 fw-semibold"
                           asp-page="/Workouts/WorkoutsList">
                            Посмотреть тренировки
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-yellow btn-lg px-4 fw-semibold"
                           asp-area="Identity" asp-page="/Account/Login">
                            Войти
                        </a>
                    }
                </div>
            </div>

        </div>
    </div>
</section>


<!-- Features Section -->
<section class="features-section py-4 py-md-5">
    <div class="container">
        <div class="text-center mb-4 mb-md-5">
            <h2 class="fw-bold mb-3 mb-md-4 text-white display-6 display-md-5">
                Возможности Gym Tracker
            </h2>
        </div>

        <div class="row g-3 g-md-4">
            <div class="col-12 col-md-4">
                <div class="feature-card h-100 p-3 p-md-4 border rounded-3 shadow-sm text-center">
                    <h4 class="fw-bold mb-2 mb-md-3 text-white">Управление тренировками</h4>
                    <p class="text-light mb-0">
                        Просматривайте список всех тренировок, структурируйте свои занятия и анализируйте нагрузку.
                    </p>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="feature-card h-100 p-3 p-md-4 border rounded-3 shadow-sm text-center">
                    <h4 class="fw-bold mb-2 mb-md-3 text-white">Прогресс со временем</h4>
                    <p class="text-light mb-0">
                        Следите за изменением рабочих весов, количества повторений и динамикой прогресса.
                    </p>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="feature-card h-100 p-3 p-md-4 border rounded-3 shadow-sm text-center">
                    <h4 class="fw-bold mb-2 mb-md-3 text-white">Удобство и простота</h4>
                    <p class="text-light mb-0">
                        Минималистичный интерфейс, простота и удобство предоставляемых функций.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-4 py-md-5 bg-dark">
    <div class="container">
        <div class="row text-center">
            <div class="col-12 col-md-4 mb-4 mb-md-0">
                <h3 class="fw-bold text-yellow display-5 display-md-4">100+</h3>
                <p class="text-light mb-0">Тренировок создано пользователями</p>
            </div>
            <div class="col-12 col-md-4 mb-4 mb-md-0">
                <h3 class="fw-bold text-yellow display-5 display-md-4">5000+</h3>
                <p class="text-light mb-0">Записей прогресса</p>
            </div>
            <div class="col-12 col-md-4">
                <h3 class="fw-bold text-yellow display-5 display-md-4">30+</h3>
                <p class="text-light mb-0">Упражнений в базе</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
@if (!Model.IsSignedIn)
{
    <section class="cta-section py-4 py-md-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-3 mb-md-4 text-white display-6 display-md-5">
                Хотите сохранить свой прогресс?
            </h2>
            <p class="text-white mb-4 fs-6 fs-md-5">
                Создайте аккаунт и ваши тренировки всегда будут под рукой.
            </p>

            <div class="d-grid d-sm-flex justify-content-center gap-2 gap-sm-3">
                <a class="btn btn-yellow btn-lg px-5 fw-semibold"
                   asp-area="Identity" asp-page="/Account/Register">
                    Регистрация
                </a>
                <a class="btn btn-outline-yellow btn-lg px-5 fw-semibold"
                   asp-area="Identity" asp-page="/Account/Login">
                    Вход
                </a>
            </div>
        </div>
    </section>
}

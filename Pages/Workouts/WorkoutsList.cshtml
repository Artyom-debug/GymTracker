@page
@model GymTrackerProject.Pages.Workouts.WorkoutListModel
@{
    ViewData["Title"] = "Мои тренировки";
}

<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold text-white mb-2">Мои тренировки</h1>
            <p class="text-light mb-0">Создавайте тренировки и отслеживайте прогресс по упражнениям.</p>
        </div>

        @if (Model.WorkoutCount == 0)
        {
            <div class="row g-4">
                <div class="col-12 col-md-6 col-lg-4">
                    <a asp-page="/Workouts/AddWorkout"
                       class="card h-100 border rounded-3 shadow-sm text-decoration-none d-flex align-items-center justify-content-center"
                       style="background: rgba(255,255,255,0.06); min-height: 210px;">
                        <div class="text-center p-4">
                            <div class="fw-bold text-yellow" style="font-size: 64px; line-height: 1;">+</div>
                            <div class="fw-semibold text-white mt-2">Добавить тренировку</div>
                            <div class="text-light" style="opacity:.85;">Создать новую</div>
                        </div>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var workout in Model.Workouts)
                {
                    var renameId = $"rename-{workout.WorkoutId}";

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 border rounded-3 shadow-sm"
                             style="background: rgba(255,255,255,0.06);">
                            <div class="card-body p-4 d-flex flex-column">
                                <div class="mb-3">
                                    <div class="text-yellow fw-semibold" style="opacity: .95;">
                                        @workout.CreatedDate.ToShortDateString()
                                    </div>
                                    <h4 class="fw-bold text-white mb-0 mt-1">
                                        @workout.Name
                                    </h4>
                                </div>

                                <p class="text-light mb-4" style="opacity: .9;">
                                    Откройте тренировку, чтобы посмотреть упражнения и прогресс.
                                </p>

                                <div class="mt-auto d-flex gap-2 flex-wrap align-items-start">
                                    <a class="btn btn-outline-yellow fw-semibold"
                                       asp-page="/Workouts/Workout"
                                       asp-route-WorkoutId="@workout.WorkoutId"
                                       asp-route-WorkoutName="@workout.Name">
                                        Открыть
                                    </a>

                                    <button class="btn btn-outline-yellow fw-semibold"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#@renameId"
                                            aria-expanded="false"
                                            aria-controls="@renameId">
                                        Изменить название
                                    </button>

                                    <form method="post"
                                          asp-page-handler="DeleteWorkout"
                                          onsubmit="return confirm('Удалить тренировку?');"
                                          class="m-0">
                                        <input type="hidden" name="id" value="@workout.WorkoutId" />
                                        <button type="submit" class="btn btn-outline-danger fw-semibold">
                                            Удалить
                                        </button>
                                    </form>

                                    <div class="collapse w-100 mt-2" id="@renameId">
                                        <div class="card border rounded-3"
                                             style="background: rgba(0,0,0,0.25); border-color: var(--black-light) !important;">
                                            <div class="card-body p-3">
                                                <form method="post"
                                                      asp-page-handler="RenameWorkout"
                                                      class="rename-form d-flex gap-2 flex-wrap align-items-start m-0">
                                                    <input type="hidden" name="id" value="@workout.WorkoutId" />

                                                    <div class="flex-grow-1">
                                                        <input asp-for="NewWorkoutName"
                                                               class="form-control"
                                                               value="@workout.Name"
                                                               placeholder="Новое название" />
                                                        <span asp-validation-for="NewWorkoutName" class="text-danger"></span>
                                                    </div>

                                                    <button type="submit" class="btn btn-yellow fw-semibold">
                                                        Сохранить
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div> 
                            </div> 
                        </div> 
                    </div> 
                }

                <div class="col-12 col-md-6 col-lg-4">
                    <a asp-page="/Workouts/AddWorkout"
                       class="card h-100 border rounded-3 shadow-sm text-decoration-none d-flex align-items-center justify-content-center"
                       style="background: rgba(255,255,255,0.06); min-height: 210px;">
                        <div class="text-center p-4">
                            <div class="fw-bold text-yellow" style="font-size: 64px; line-height: 1;">+</div>
                            <div class="fw-semibold text-white mt-2">Добавить тренировку</div>
                            <div class="text-light" style="opacity:.85;">Создать новую</div>
                        </div>
                    </a>
                </div>

            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

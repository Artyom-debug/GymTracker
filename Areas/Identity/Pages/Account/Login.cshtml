@page "/Login"
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<section class="py-4 py-md-5">
    <div class="container">

        <!-- Заголовок -->
        <div class="text-center mb-4 mb-md-5">
            <h1 class="fw-bold text-white mb-2 display-6 display-md-5">Вход</h1>
            <p class="text-light mb-0 px-2 px-md-0">
                Введите данные, чтобы продолжить.
            </p>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-6 col-xl-5">

                <!-- Карточка в общем стиле -->
                <div class="card border rounded-3 shadow-sm overflow-hidden"
                     style="background: radial-gradient(circle at 20% 10%, rgba(255, 193, 7, 0.18) 0%, rgba(255,255,255,0.06) 45%, rgba(255,255,255,0.06) 100%);
                            border-color: var(--black-light) !important;">
                    <div class="card-body p-4 p-md-5">

                        <form id="account" method="post" class="d-flex flex-column gap-3">

                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <!-- Email -->
                            <div class="form-floating">
                                <input asp-for="Input.Email"
                                       class="form-control"
                                       autocomplete="username"
                                       aria-required="true"
                                       placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Password -->
                            <div class="form-floating">
                                <input asp-for="Input.Password"
                                       class="form-control"
                                       autocomplete="current-password"
                                       aria-required="true"
                                       placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Пароль</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <!-- Remember -->
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label text-light" asp-for="Input.RememberMe">
                                    Запомнить меня
                                </label>
                            </div>

                            <!-- Submit -->
                            <button id="login-submit" type="submit"
                                    class="btn btn-yellow btn-lg fw-semibold w-100">
                                Войти
                            </button>

                            <!-- Links -->
                            <div class="pt-2 d-flex flex-column gap-2 text-center text-sm-start">

                                <a class="text-yellow text-decoration-none fw-semibold"
                                   asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                    Регистрация
                                </a>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
